{
  "bracketSameLine": true,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ],
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "pluginSearchDirs": ["."],
  "printWidth": 120,
  "singleAttributePerLine": false,
  "singleQuote": true,
  "svelteAllowShorthand": true,
  "svelteIndentScriptAndStyle": true,
  "tabWidth": 2,
  "trailingComma": "none"
}
