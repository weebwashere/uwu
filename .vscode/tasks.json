  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start dev server",
      "type": "shell",
      "command": "npm run dev"
    },
    {
      "label": "Start dev server pnpm",
      "type": "shell",
      "command": "pnpm run dev"
      // 	Uncomment to run when open
      // "runOptions": {
      // 	"runOn": "folderOpen"
      // }
    },
    {
      "label": "Start dev server bun",
      "type": "shell",
      "command": "bun --bun run --hot dev"
    }
  ]
}
